generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String     @unique
  password String
  wishList String[]
  activity Activity[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Activity {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  description String
  duration Int
  category Category @default(Indor)
  numPlayers Int
  minPlayers Int
  maxPlayers Int
  difficultRating DifficultyRating @default(Normal)
  likeReview Int

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Venue {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  email String
  description String
  reviews String
  logo String
  mainPhoto String
  bannerPhoto String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Location {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  address String
  phone String
  city String
  postalCode String
  latitude String
  longitude String
}

enum Category {
  Indor
  Outdoor
  Aerial
  Aquatic
}

enum DifficultyRating {
  Boring
  Bad
  Normal
  Good
  Exciting
}
