generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Location {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  address    String
  phone      String
  city       String
  postalCode String
  latitude   Float
  longitude  Float
  Venue      Venue[]
  Activity   Activity[]
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  wishList  String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  venue     Venue?
}

model Venue {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String     @unique
  email       String
  description String
  reviews     String
  logo        String
  mainPhoto   String
  bannerPhoto String
  location    Location   @relation(fields: [locationId], references: [id])
  locationId  String     @db.ObjectId
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Activity    Activity[]
  user        User       @relation(fields: [userId], references: [id])
  userId      String     @unique @db.ObjectId
}

model Activity {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  description     String
  image           String
  venue           Venue            @relation(fields: [venueId], references: [id])
  venueId         String           @unique @db.ObjectId
  duration        Int
  category        Category         @default(Indoor)
  numPlayers      Int
  minPlayers      Int
  maxPlayers      Int
  difficultRating DifficultyRating @default(Normal)
  likeReview      Float
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  location        Location         @relation(fields: [locationId], references: [id])
  locationId      String           @db.ObjectId
}

enum Category {
  Indoor
  Outdoor
  Aerial
  Aquatic
}

enum DifficultyRating {
  Boring
  Bad
  Normal
  Good
  Exciting
}
