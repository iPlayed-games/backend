generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String     
  password String
  wishList String[]
  activity Activity[] @relation("userActivity")
  venueId Venue? @relation("userVenue")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Activity {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  description String
  image String
  venueId Venue? @relation("activityVenue")
  duration Int
  category Category @default(Indor)
  numPlayers Int
  minPlayers Int
  maxPlayers Int
  difficultRating DifficultyRating @default(Normal)
  likeReview Float
  user   User?   @relation("userActivity", fields: [userId], references: [id])
  userId String @db.ObjectId
  location Location? @relation("venueLocation")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Venue {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  email String
  description String
  reviews String
  logo String
  mainPhoto String
  bannerPhoto String
  userVenue User? @relation("userVenue", fields: [userVenueId], references: [id])
  userVenueId String @db.ObjectId @unique
  activityVenue Activity? @relation("activityVenue", fields: [activityVenueId], references: [id])
  activityVenueId String @db.ObjectId @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Location {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  address String
  phone String
  city String
  postalCode String
  latitude String
  longitude String
  activityLocation Activity? @relation("venueLocation", fields: [activityLocationId], references: [id]) 
  activityLocationId String @db.ObjectId @unique
}

enum Category {
  Indor
  Outdoor
  Aerial
  Aquatic
}

enum DifficultyRating {
  Boring
  Bad
  Normal
  Good
  Exciting
}
