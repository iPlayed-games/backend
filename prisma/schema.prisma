generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  email    String     @unique
  name     String?
  activity Activity[]
}

model Activity {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}
